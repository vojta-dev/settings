{
  // editor
  "breadcrumbs.enabled": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.acceptSuggestionOnCommitCharacter": false, // https://stackoverflow.com/q/32911977
  "editor.bracketPairColorization.enabled": false,
  "editor.codeActionsOnSave": { "source.organizeImports": true },
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.fontFamily": "SF Mono",
  "editor.fontSize": 18,
  "editor.fontWeight": "bold",
  "editor.formatOnSave": true,
  "editor.inlayHints.enabled": "on",
  "editor.maxTokenizationLineLength": 100000,
  "editor.minimap.enabled": false,
  "editor.smoothScrolling": true,
  "editor.stickyTabStops": true,
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "explorer.compactFolders": false,
  "files.eol": "\n",
  "security.workspace.trust.enabled": false,
  "window.commandCenter": false,
  "window.enableMenuBarMnemonics": false,
  "window.menuBarVisibility": "hidden",
  "window.title": "${dirty}${rootName}",
  "workbench.editor.enablePreview": false,
  "workbench.iconTheme": "symbols",
  "workbench.layoutControl.enabled": false,
  "workbench.list.smoothScrolling": true,
  "workbench.preferredDarkColorTheme": "Palenight Theme",
  "workbench.preferredLightColorTheme": "Default Light Modern",
  "workbench.productIconTheme": "icons-carbon",
  "workbench.startupEditor": "none",
  "workbench.tree.indent": 12,

  // formatters
  "[gdscript]": { "editor.defaultFormatter": "Razoric.gdscript-toolkit-formatter" },
  "[svelte]": { "editor.defaultFormatter": "svelte.svelte-vscode" },
  "[toml]": { "editor.defaultFormatter": "tamasfe.even-better-toml" },
  "[typst]": { "editor.defaultFormatter": "nvarner.typst-lsp" },
  "[xml]": { "editor.defaultFormatter": "redhat.vscode-xml" },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "prettier.printWidth": 120,
  "prettier.singleQuote": true,

  // terminal
  "terminal.external.windowsExec": "wt",
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.fontFamily": "CaskaydiaCove Nerd Font",
  "terminal.integrated.fontSize": 18,
  "terminal.integrated.smoothScrolling": true,

  // javascript / typescript
  "javascript.preferences.quoteStyle": "single",
  "typescript.preferences.importModuleSpecifierEnding": "minimal",
  "typescript.preferences.includePackageJsonAutoImports": "on",
  "typescript.preferences.quoteStyle": "single",

  // other
  "git.autofetch": true,
  "git.openRepositoryInParentFolders": "never",
  "html.autoClosingTags": false,
  "svelte.enable-ts-plugin": true,
  "telemetry.telemetryLevel": "off",

  // https://code.visualstudio.com/updates/v1_78#_diff-algorithm-improvements
  // https://code.visualstudio.com/updates/v1_80#_new-diff-editor
  // https://code.visualstudio.com/updates/v1_81#_diff-editor
  "diffEditor.experimental.showMoves": true,

  // https://code.visualstudio.com/updates/v1_81#_asynchronous-tokenization-rollout
  "editor.experimental.asyncTokenization": true,

  // "catppuccin.accentColor": "sapphire",
  // "catppuccin.italicKeywords": false,
  // "catppuccin.workbenchMode": "minimal",

  // "typst-lsp.experimentalFormatterMode": "on",

  // unorganized
  "errorLens.followCursor": "activeLine",
  "errorLens.gutterIconsEnabled": true,
  "window.autoDetectColorScheme": true,
  "files.associations": { "*.css": "css" },
  "deno.enable": false,
  "symbols.hidesExplorerArrows": false,
  "workbench.colorTheme": "Default Light Modern"
}
